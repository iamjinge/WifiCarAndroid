<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.bingyan.android.wificar.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <Button
        android:id="@+id/showImage"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/imageView"
        android:text="@string/activity_main_pause"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/showImage"
        android:orientation="vertical">

        <Button
            android:id="@+id/moveForward"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/activity_main_forward"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/moveLeft"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/activity_main_left"/>


            <Button
                android:id="@+id/moveRight"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/activity_main_right"/>

        </LinearLayout>

        <Button
            android:id="@+id/moveBackward"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/activity_main_backward"/>

    </LinearLayout>

</RelativeLayout>
